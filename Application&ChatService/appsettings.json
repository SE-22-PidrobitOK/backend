{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${SQL_SERVER};Database=${APPLICATION_CHAT_DATABASE};User Id=${SQL_USER};Password=${SQL_PASSWORD};TrustServerCertificate=True"
  },
  "Jwt": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "Pidrobitok.ApplicationChatService",
    "Audience": "Pidrobitok.Frontend",
    "TokenLifeTimeInMinutes": "${JWT_TOKEN_LIFETIME}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}